               </intent-filter>
            -->
        </activity>
        <activity android:name=".TaskDetailActivity" />
        <activity android:name=".user.MeInfoActivity" />
        <activity android:name=".user.ResetPwdActivity" />
        <activity android:name=".user.AboutActivity" />
        <activity
            android:name=".WorkChatActivity"
            android:screenOrientation="portrait">

            <!--
                <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            -->
        </activity>
        <activity android:name=".PerformChatActivity" />
        <activity android:name="com.lzy.imagepicker.ui.ImageGridActivity" />
        <activity android:name="com.lzy.imagepicker.ui.ImagePreviewDelActivity" />
        <activity android:name=".WorkChatDetailActivity" />
        <activity android:name=".TaskQueryActivity" />
        <activity android:name=".moudle.warning.EarlyWarningActivity"></activity>
    </application>

</manifest>